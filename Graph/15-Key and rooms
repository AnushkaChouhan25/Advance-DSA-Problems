class Solution {
    public boolean canVisitAllRooms(List<List<Integer>> rooms) {
        boolean vis[] = new boolean[rooms.size()];
        dfs(rooms, vis, 0);

        for (boolean v : vis) {
            if (!v) {
                return false;
            }
        }
        return true;

    }
    public void dfs(List<List<Integer>> rooms, boolean []vis, int i){
        vis[i] = true;
        for (int key : rooms.get(i)) {
            if (!vis[key]) {
                dfs(rooms, vis, key);
            }
        }  
    }
}